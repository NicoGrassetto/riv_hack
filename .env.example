# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# Development: mongodb://localhost:27017/nmbs_gamify
# Production: Use authentication - mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/nmbs_gamify

# JWT Secret (CRITICAL: Change this in production!)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be at least 32 characters long
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters

# CORS Settings
# Development: http://localhost:3000
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:3000
